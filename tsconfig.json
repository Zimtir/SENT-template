{
  "include": ["src/**/*", "src/node_modules/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "lib": ["DOM", "ESNEXT", "WebWorker"],
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "ESNEXT",
    "moduleResolution": "node",
    "target": "ESNEXT",
    "typeRoots": ["typings"],
    "types": ["svelte", "@sapper"],
    "skipLibCheck": true
  }
}
